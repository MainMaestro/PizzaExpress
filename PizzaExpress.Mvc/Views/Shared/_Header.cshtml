@using Microsoft.AspNetCore.Identity;
@using PizzaExpress.Models;
@inject SignInManager<User> SignInManager
<header class="c-header">
	<div class="container">
		<div class="c-header__main">
			<div class="c-header__items row">
				<div class="col-6">
					<div class="head-logo">
						<a asp-action="index" asp-controller="Home">
							<img src="/images/logo.png" alt="">
						</a>
					</div>
				</div>
				<div class="col-6 text-sm-right">
					<div class="header__points row">
						<div class="header__point col-auto d-none d-md-block">
							<a href="javascript:;" data-popup-toggle="basket">
								<svg class="header__btn-icon">
									<use href="#cart"></use>
								</svg>
							</a>
						</div>
						<div class="header__point col-auto d-none d-md-block">
							@if (SignInManager.IsSignedIn(User))
							{
								<a class="header__btn" data-bs-toggle="modal" data-bs-target="#authModal">
									<svg class="header__btn-icon">
										<use href="#user"></use>
									</svg>
								</a>
								<div class="modal fade" id="authModal" tabindex="-1" aria-hidden="true">
									<div class="modal-dialog modal-dialog-centered">
										<div class="modal-content">

											<div class="modal-header">
												<h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
											</div>
											<div class="modal-body">
												@await Html.PartialAsync("~/Views/Users/_LoginPartial.cshtml")

											</div>
										</div>
									</div>
								</div>
							}
							else
							{
								<a class="header__btn" data-bs-toggle="modal" data-bs-target="#authModal">
									<svg class="header__btn-icon">
										<use href="#user"></use>
									</svg>
								</a>
							}


							<div class="header-popup col-5" data-popup="basket">
							</div>
							<div class="header-popup col-5" data-popup="auth">
							</div>
							
							</div>

						<div class="header__point col-auto">
							<a href="#">
								<svg class="header__btn-icon">
									<use href="#menu"></use>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
</header>
