@model LoginViewModel
@{

    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path}";
}
<form asp-controller="Users" asp-action="Login" method="post">
    <input asp-for="ReturnUrl" value="@returnUrl" hidden>
    <div>
        <input asp-for="PhoneNumber" type="">
    </div>
    <div class="d-flex">
        Запомнить меня
        <input asp-for="Remember" type="checkbox">
    </div>
    <div>
        <button type="submit">
            Вход
        </button>
    </div>
</form>

